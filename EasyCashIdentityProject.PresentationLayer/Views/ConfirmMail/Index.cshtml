@model ConfirmMailViewModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container">
    <br />
    <br />
<form method="post">
    <h2>Mail Adress: @ViewBag.v</h2>
    <br />
    <label>User ID</label>
    <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.v"/>
    <br />
    <label>Input Your 6 Digits Mail Confirmation Code</label>
    <input type="text" class="form-control" asp-for="ConfimCode"/>
    <br />
    <button class="btn btn-primary">Activate Account</button>

</form>
</div>